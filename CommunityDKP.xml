				PanelTemplates_TabResize(self, 0, nil, 36, 57); <!--self:GetParent().maxTabWidth or 88 -->
				CharacterFrame_TabBoundsCheck(self);

				if (self:GetName() == "CommDKPCommDKP.ConfigTabMenuTab2" or self:GetName() == "CommDKPCommDKP.ConfigTabMenuTab5" or self:GetName() == "CommDKPCommDKP.ConfigTabMenuTab6") and GetLocale() == "enUS" then
					PanelTemplates_TabResize(self, 0, nil, 36, self:GetParent().maxTabWidth or 88);			<!-- Corrects width on tabs for English Client -->
				end
			</OnShow>
			<OnEnter>
				local buttonText = _G[self:GetName().."Text"];
				if (buttonText and buttonText:IsTruncated()) then
					GameTooltip:SetOwner(self, "ANCHOR_RIGHT");
					GameTooltip:SetText(buttonText:GetText());
				end
			</OnEnter>
			<OnLeave>
				GameTooltip_Hide();
			</OnLeave>
		</Scripts>
